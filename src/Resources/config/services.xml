<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id ="hakam_db_config.service" class="Hakam\DoctrineDbSwitcherBundle\Services\DbConfigService" public="false" >
            <argument  key="$entityManager" type="service" id = 'doctrine.orm.entity_manager'/>
            <argument  key="$dbClassName" type="string" id="dbClassName"/>
            <argument  key="$dbIdentifier" type="string" id="id"/>
        </service>
        <service id="Hakam\DoctrineDbSwitcherBundle\Services\DbConfigService" alias="hakam_db_config.service"/>
        <service id="Hakam\DoctrineDbSwitcherBundle\EventListener\DbSwitchEventListener">
            <tag name="kernel.event_listener" event= "Hakam\DoctrineDbSwitcherBundle\Event\SwitchDbEvent" />
            <argument type="service" id="service_container"/>
            <argument type="service" id="hakam_db_config.service"/>
        </service>

        <service id="Hakam\DoctrineDbSwitcherBundle\Command\DiffCommand">
            <tag name="console.command" />
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="Hakam\DoctrineDbSwitcherBundle\Command\MigrateCommand">
            <tag name="console.command" />
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="Hakam\DoctrineDbSwitcherBundle\Command\UpdateSchemaCommand">
            <tag name="console.command" />
            <argument type="service" id="Doctrine\Common\Persistence\ManagerRegistry"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="event_dispatcher" />
        </service>
        <service id="tenant_db_interface" class="Hakam\DoctrineDbSwitcherBundle\Services\TenantDbConfigurationInterface" public="true"/>

        <service class="Hakam\DoctrineDbSwitcherBundle\Doctrine\ORM\TenantEntityManager" id="tenant_entity_manager" public="true">
            <argument type="service" id="doctrine.orm.tenant_entity_manager"/>
        </service>
        <service id="Hakam\DoctrineDbSwitcherBundle\Doctrine\ORM\TenantEntityManager" alias="tenant_entity_manager" />
    </services>
</container>